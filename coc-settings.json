{
    "pright": {
        "enabled": true,
        "server": "/usr/bin/pyright-langserver",
        "organizeimports": {
            "provider": "pright"
        }
    },
    "python": {
        "pythonPath": "~/miniconda3/envs/py38/bin/python",
        "analysis": {
            "autoImportCompletions": false,
            "autoSearchPaths": false
        },
        "formatting": {
            "provider": "yapf",
            "yapfPath": "~/miniconda3/envs/py38/bin/yapf",
            "yapfArgs": [
                "--style",
                "{SPACES_AROUND_POWER_OPERATOR: True, SPACES_BEFORE_COMMENT: 1}"
            ]
        },
        "linting": {
            "enabled": false,
            "flake8Enabled": false
        }
    },
    "explorer": {
        "sources": [
            {
                "name": "bookmark",
                "expand": false
            },
            {
                "name": "buffer",
                "expand": false
            },
            {
                "name": "file",
                "expand": true
            }
        ],
        "file": {
            "showHiddenFiles": false,
            "column": {
                "git.showIgnored": true,
                "indent.indentLine": true
            }
        },
        "width": 50,
        "position": "right",
        "quitOnOpen": true,
        "PreviewActionStrategy": "content",
        "icon": {
            "enableNerdfont": true,
            "source": "nvim-web-devicons"
        }
    }
}

